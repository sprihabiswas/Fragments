<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="skillbooting.fragments.OptionsActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATIC FRAGMENT"
            android:textColor="#FFF"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textSize="21sp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:onClick="static_fragment"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DYNAMIC FRAGMENT"
            android:textColor="#FFF"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:onClick="dynamic_fragment"
            android:layout_marginBottom="30dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMUNICATING FRAGMENT"
            android:textColor="#FFF"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:onClick="communicating_fragment"
            />

    </LinearLayout>

    </RelativeLayout>